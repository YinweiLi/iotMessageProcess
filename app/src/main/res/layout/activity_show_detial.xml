<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_detial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yinwei.iotmessageprocess.ShowDetialActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2END"
        android:layout_alignBaseline="@+id/button2BEGIN"
        android:layout_alignBottom="@+id/button2BEGIN"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="SEARCH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2END"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:id="@+id/button2SEARCH" />

    <Button
        android:text="Begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2BEGIN"
        android:layout_marginStart="23dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="UP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2BEGIN"
        android:layout_alignStart="@+id/button2BEGIN"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:id="@+id/button2UP" />

    <Button
        android:text="DOWN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2UP"
        android:layout_alignStart="@+id/button2END"
        android:id="@+id/button2DOWN" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button2UP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:id="@+id/ListView2Show" />

</RelativeLayout>
